{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "timco-vm1StorAccType": {
        "defaultValue": "Standard_LRS",
        "allowedValues": [
          "Standard_LRS",
          "Standard_ZRS",
          "Standard_GRS",
          "Standard_RAGRS",
          "Premium_LRS"
        ],
        "type": "String",
        "metadata": {
          "description": "Storage account type to store new VM."
        }
      },
        "timco-domainName": {
            "defaultValue": "timco.local",
            "type": "String",
            "metadata": {
                "description": "FQDN of the AD Domain to be joined."
            }
        },
        "timco-OUPath": {
            "defaultValue": "OU=Servers;OU=Computers;OU=Managed;DC=timco;DC=local",
            "type": "String",
            "metadata": {
                "description": "Path of OU for computer account."
            }
        },
        "timco-domainAdminName": {
            "defaultValue": "timco-admin",
            "minLength": 1,
            "type": "String",
            "metadata": {
                "description": "Admin username to join the domain."
            }
        },
        "timco-domainAdminPassword": {
            "type": "SecureString",
            "metadata": {
                "description": "Admin password to join the domain."
            }
        },
        "timco-vm1Name": {
            "defaultValue": "timco-srv1",
            "minLength": 1,
            "type": "String",
            "metadata": {
                "description": "Name of the VM."
            }
        },
        "timco-vm1Pip1DnsName": {
            "defaultValue": "tcsrv1",
            "minLength": 1,
            "type": "String",
            "metadata": {
                "description": "Unique DNS Name for the Public IP used to access the VM.  Do not include domain name suffix.  It can be the same as the internal VM name."
            }
        },
        "timco-vm1AdminUserName": {
            "defaultValue": "timco-admin",
            "minLength": 1,
            "type": "String",
            "metadata": {
                "description": "Admin username for the VM."
            }
        },
        "timco-vm1AdminPassword": {
            "type": "SecureString",
            "metadata": {
                "description": "Admin password for the VM."
            }
        },
      "timco-vm1WindowsOSVersion": {
        "defaultValue": "2016-Datacenter",
        "allowedValues": [
          "2008-R2-SP1",
          "2012-Datacenter",
          "2012-R2-Datacenter",
          "2016-Datacenter"
        ],
        "type": "String",
        "metadata": {
          "description": "Windows version for the VM."
        }
      },
        "timco-vm1VmSize": {
            "defaultValue": "Standard_D1_V2",
            "allowedValues": [
                "Standard_A0",
                "Standard_A1",
                "Standard_D1_V2"
            ],
            "type": "String",
            "metadata": {
                "description": "Size of VM."
            }
        },
        "timco-vm1DataDisk1SizeGB": {
            "defaultValue": "50",
            "type": "String",
            "metadata": {
                "description": "Size of data disk.  This is NOT the temporary D drive that is added for temporary use."
            }
        },
        "timco-vm1VNet": {
            "defaultValue": "timco-vnet1",
            "type": "String",
            "metadata": {
                "description": "Existing VNet"
            }
        },
        "timco-vm1SubNet": {
            "defaultValue": "BackEnd-10.0.2.0-Subnet",
            "allowedValues": [
                "FrontEnd-10.0.1.0-Subnet",
                "BackEnd-10.0.2.0-Subnet"
            ],
            "type": "String",
            "metadata": {
                "description": "Subnet for VM. Front-end or back-end?"
            }
        },
        "timco-vm1DNSServer": {
            "defaultValue": "10.0.2.11",
            "type": "String",
            "metadata": {
                "description": "IP address of DNS Server."
            }
        }
    },
  "variables": {
    "timco-vm1StorAccName": "[concat('timcosa', uniqueString(resourceGroup().id, parameters('timco-vm1Name')))]",
    "timco-modulesUrl": "https://github.com/timblewitt/TimCo/raw/master/AD-SRVn/timco-dsc1.zip",
    "timco-assetLocation": "https://raw.githubusercontent.com/timblewitt/TimCo/master/AD-SRVn/",
    "timco-dsc1ConfigurationFunction": "timco-dsc1.ps1\\Main",
    "timco-dsc1ConfigurationData": "timco-dsc1.psd1",
    "timco-vm1ImagePublisher": "MicrosoftWindowsServer",
    "timco-vm1ImageOffer": "WindowsServer",
    "timco-vm1OSDiskName": "[concat(parameters('timco-vm1Name'), '-OSDisk')]",
    "timco-vm1DataDisk1Name": "[concat(parameters('timco-vm1Name'), '-DataDisk1')]",
    "timco-vm1VNetID": "[resourceId('Microsoft.Network/virtualNetworks', parameters('timco-vm1VNet'))]",
    "timco-vm1SubnetRef": "[concat(variables('timco-vm1VNetID'), '/subnets/', parameters('timco-vm1SubNet'))]",
    "timco-vm1StorageAccountContainerName": "vhds",
    "timco-vm1Nic1Name": "[concat(parameters('timco-vm1Name'), '-nic1')]",
    "timco-vm1Pip1Name": "[concat(parameters('timco-vm1Name'), '-pip1')]",
    "timco-domainJoinOptions": 3
  },
    "resources": [
      {
        "type": "Microsoft.Storage/storageAccounts",
        "name": "[variables('timco-vm1StorAccName')]",
        "apiVersion": "2017-10-01",
        "sku": {
          "name": "[parameters('timco-vm1StorAccType')]"
        },
        "kind": "StorageV2",
        "location": "[resourceGroup().location]",
        "dependsOn": [],
        "tags": {
          "displayName": "[variables('timco-vm1StorAccName')]"
        },
        "properties": {
        }
      },
      {
        "type": "Microsoft.Network/publicIPAddresses",
        "name": "[variables('timco-vm1Pip1Name')]",
        "apiVersion": "2017-10-01",
        "location": "[resourceGroup().location]",
        "tags": {
          "displayName": "[variables('timco-vm1Pip1Name')]"
        },
        "properties": {
          "publicIPAllocationMethod": "Dynamic",
          "dnsSettings": {
            "domainNameLabel": "[parameters('timco-vm1Pip1DnsName')]"
          }
        },
        "dependsOn": [ ]
      },
      {
        "type": "Microsoft.Network/networkInterfaces",
        "name": "[variables('timco-vm1Nic1Name')]",
        "apiVersion": "2017-10-01",
        "location": "[resourceGroup().location]",
        "tags": {
          "displayName": "[variables('timco-vm1Nic1Name')]"
        },
        "properties": {
          "ipConfigurations": [
            {
              "name": "ipconfig1",
              "properties": {
                "privateIPAllocationMethod": "Dynamic",
                "subnet": {
                  "id": "[variables('timco-vm1SubnetRef')]"
                },
                "publicIPAddress": {
                  "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('timco-vm1Pip1Name'))]"
                }
              }
            }
          ]
        },
        "dependsOn": [
          "[concat('Microsoft.Network/publicIPAddresses/', variables('timco-vm1Pip1Name'))]"
        ]
      },
      {
        "type": "Microsoft.Compute/virtualMachines",
        "name": "[parameters('timco-vm1Name')]",
        "apiVersion": "2017-12-01",
        "location": "[resourceGroup().location]",
        "tags": {
          "displayName": "[parameters('timco-vm1Name')]"
        },
        "properties": {
          "hardwareProfile": {
            "vmSize": "[parameters('timco-vm1VmSize')]"
          },
          "diagnosticsProfile": {
            "bootDiagnostics": {
              "enabled": true,
              "storageUri": "[concat('http://', variables('timco-vm1StorAccName'), '.blob.core.windows.net/')]"
            }
          },
          "osProfile": {
            "computerName": "[parameters('timco-vm1Name')]",
            "adminUsername": "[parameters('timco-vm1AdminUsername')]",
            "adminPassword": "[parameters('timco-vm1AdminPassword')]"
          },
          "storageProfile": {
            "imageReference": {
              "publisher": "[variables('timco-vm1ImagePublisher')]",
              "offer": "[variables('timco-vm1ImageOffer')]",
              "sku": "[parameters('timco-vm1WindowsOSVersion')]",
              "version": "latest"
            },
            "osDisk": {
              "name": "[variables('timco-vm1OSDiskName')]",
              "managedDisk": {
                "storageAccountType": "Standard_LRS"
              },
              "caching": "ReadWrite",
              "createOption": "FromImage"
            },
            "dataDisks": [
              {
                "name": "[variables('timco-vm1DataDisk1Name')]",
                "diskSizeGB": "[parameters('timco-vm1DataDisk1SizeGB')]",
                "lun": 1,
                "managedDisk": {
                  "storageAccountType": "Standard_LRS"
                },
                "createOption": "Empty"
              }
            ]
          },
          "networkProfile": {
            "networkInterfaces": [
              {
                "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('timco-vm1Nic1Name'))]"
              }
            ]
          }
        },
        "resources": [
          {
            "type": "extensions",
            "name": "timco-dsc1",
            "apiVersion": "2017-12-01",
            "location": "[resourceGroup().location]",
            "tags": {
              "displayName": "timco-dsc1"
            },
            "properties": {
              "publisher": "Microsoft.Powershell",
              "type": "DSC",
              "typeHandlerVersion": "2.72",
              "autoUpgradeMinorVersion": true,
              "settings": {
                "modulesUrl": "[variables('timco-modulesUrl')]",
                "sasToken": "",
                "configurationFunction": "[variables('timco-dsc1ConfigurationFunction')]",
                "properties": {
                  "NodeName": "[parameters('timco-vm1Name')]",
                  "DNSServerAddress": "[parameters('timco-vm1DNSServer')]"
                }
              }
            },
            "dependsOn": [
              "[concat('Microsoft.Compute/virtualMachines/', parameters('timco-vm1Name'))]"
            ]
          }
        ],
        "dependsOn": [
          "[concat('Microsoft.Storage/storageAccounts/', variables('timco-vm1StorAccName'))]",
          "[concat('Microsoft.Network/networkInterfaces/', variables('timco-vm1Nic1Name'))]"
        ]
      },
      {
        "type": "Microsoft.Compute/virtualMachines/extensions",
        "name": "[concat(parameters('timco-vm1Name'),'/joindomain')]",
        "apiVersion": "2017-12-01",
        "location": "[resourceGroup().location]",
        "properties": {
          "publisher": "Microsoft.Compute",
          "type": "JsonADDomainExtension",
          "typeHandlerVersion": "1.3",
          "autoUpgradeMinorVersion": true,
          "settings": {
            "Name": "[parameters('timco-domainName')]",
            "OUPath": "[parameters('timco-ouPath')]",
            "User": "[concat(parameters('timco-domainAdminName'),'@',parameters('timco-domainName'))]",
            "Restart": "true",
            "NumberOfRetries": 30,
            "Options": "[variables('timco-domainJoinOptions')]"
          },
          "protectedsettings": {
            "Password": "[parameters('timco-domainAdminPassword')]"
          }
        },
        "dependsOn": [
          "[concat('Microsoft.Compute/virtualMachines/', parameters('timco-vm1Name'))]"
        ]
      }
    ],
    "outputs": {}
}
