{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",

  "contentVersion": "1.0.0.0",

  "parameters": {
    "timco-vm1StorAccType": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "allowedValues": [
        "Standard_LRS",
        "Standard_ZRS",
        "Standard_GRS",
        "Standard_RAGRS",
        "Premium_LRS"
      ],
      "metadata": {
        "description": "Storage account type to store new VM."
      }
    },
    "timco-domainName": {
      "type": "string",
      "defaultValue": "timco.local",
      "metadata": {
        "description": "FQDN of the AD Domain created."
      }
    },
    "timco-vm1SafeModePassword": {
      "type": "securestring",
      "metadata": {
        "description": "Safe mode password for the VM as a domain controller"
      }
    },
    "timco-vm1Name": {
      "type": "string",
      "minLength": 1,
      "defaultValue": "timco-adc1",
      "metadata": {
        "description": "Name of the VM."
      }
    },
    "timco-vm1Pip1DnsName": {
      "type": "string",
      "defaultValue": "timcoadc1",
      "minLength": 1,
      "metadata": {
        "description": "Unique DNS Name for the Public IP used to access the VM.  Do not include domain name suffix.  It can be the same as the internal VM name."
      }
    },
    "timco-vm1IPAddress": {
      "type": "string",
      "defaultValue": "10.0.2.11",
      "metadata": {
        "description": "Static IP address of VM."
      }
    },
    "timco-vm1AdminUserName": {
      "type": "string",
      "defaultValue": "timco-admin",
      "minLength": 1,
      "metadata": {
        "description": "Admin username for the VM."
      }
    },
    "timco-vm1AdminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Admin password for the VM."
      }
    },
    "timco-vm1WindowsOSVersion": {
      "type": "string",
      "defaultValue": "2016-Datacenter",
      "allowedValues": [
        "2008-R2-SP1",
        "2012-Datacenter",
        "2012-R2-Datacenter",
        "2016-Datacenter"
      ],
      "metadata": {
        "description": "Windows version for the VM."
      }
    },
    "timco-vm1VmSize": {
      "type": "string",
      "defaultValue": "Standard_D1_V2",
      "allowedValues": [
        "Standard_A0",
        "Standard_A1",
        "Standard_D1_V2"
      ],
      "metadata": {
        "description": "Size of VM."
      }
    },
    "timco-vm1DataDisk1SizeGB": {
      "type": "string",
      "defaultValue": "50",
      "metadata": {
        "description": "Size of data disk.  This is NOT the temporary D drive that is added for temporary use."
      }
    },
    "timco-vm1SubNet": {
      "type": "string",
      "defaultValue": "BackEnd-10.0.2.0-Subnet",
      "allowedValues": [
        "FrontEnd-10.0.1.0-Subnet",
        "BackEnd-10.0.2.0-Subnet"
      ],
      "metadata": {
        "description": "Subnet for VM. Front-end or back-end?"
      }
    }
  },

  "variables": {
    "timco-vm1StorAccName": "[concat('timcosa', uniqueString(resourceGroup().id, parameters('timco-vm1Name')))]",
    "timco-modulesUrl": "https://github.com/timblewitt/TimCo/raw/master/AD-ADC1/timco-dsc1.zip",
    "timco-assetLocation": "https://raw.githubusercontent.com/timblewitt/TimCo/master/AD-ADC1/",
    "timco-dsc1ConfigurationFunction": "timco-dsc1.ps1\\Main",
    "timco-dsc1ConfigurationData": "timco-dsc1.psd1",
    "timco-vNet1Name": "timco-vnet1",
    "timco-vNet1Prefix": "10.0.0.0/16",
    "timco-vNet1Subnet1Name": "FrontEnd-10.0.1.0-Subnet",
    "timco-vNet1Subnet1Prefix": "10.0.1.0/24",
    "timco-vNet1Subnet2Name": "BackEnd-10.0.2.0-Subnet",
    "timco-vNet1Subnet2Prefix": "10.0.2.0/24",
    "timco-vm1ImagePublisher": "MicrosoftWindowsServer",
    "timco-vm1ImageOffer": "WindowsServer",
    "timco-vm1OSDiskName": "[concat(parameters('timco-vm1Name'), '-OSDisk')]",
    "timco-vm1DataDisk1Name": "[concat(parameters('timco-vm1Name'), '-DataDisk1')]",
    "timco-vm1VNetID": "[resourceId('Microsoft.Network/virtualNetworks', variables('timco-vNet1Name'))]",
    "timco-vm1SubnetRef": "[concat(variables('timco-vm1VnetID'), '/subnets/', parameters('timco-vm1SubNet'))]",
    "timco-vm1StorageAccountContainerName": "vhds",
    "timco-vm1Nic1Name": "[concat(parameters('timco-vm1Name'), '-nic1')]",
    "timco-vm1Pip1Name": "[concat(parameters('timco-vm1Name'), '-pip1')]"
  },

  "resources": [
    {
      "name": "[variables('timco-vm1StorAccName')]",
      "type": "Microsoft.Storage/storageAccounts",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-06-15",
      "dependsOn": [],
      "tags": {
        "displayName": "[variables('timco-vm1StorAccName')]"
      },
      "properties": {
        "accountType": "[parameters('timco-vm1StorAccType')]"
      }
    },
    {
      "name": "[variables('timco-vNet1Name')]",
      "type": "Microsoft.Network/virtualNetworks",
      "location": "[resourceGroup().location]",
      "apiVersion": "2017-08-01",
      "dependsOn": [],
      "tags": {
        "displayName": "[variables('timco-vNet1Name')]"
      },
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[variables('timco-vNet1Prefix')]"
          ]
        },
        "subnets": [
          {
            "name": "[variables('timco-vNet1Subnet1Name')]",
            "properties": {
              "addressPrefix": "[variables('timco-vNet1Subnet1Prefix')]"
            }
          },
          {
            "name": "[variables('timco-vNet1Subnet2Name')]",
            "properties": {
              "addressPrefix": "[variables('timco-vNet1Subnet2Prefix')]"
            }
          }
        ]
      }
    },
    {
      "name": "[variables('timco-vm1Pip1Name')]",
      "type": "Microsoft.Network/publicIPAddresses",
      "location": "[resourceGroup().location]",
      "apiVersion": "2017-10-01",
      "dependsOn": [],
      "tags": {
        "displayName": "[variables('timco-vm1Pip1Name')]"
      },
      "properties": {
        "publicIPAllocationMethod": "Dynamic",
        "dnsSettings": {
          "domainNameLabel": "[parameters('timco-vm1Pip1DnsName')]"
        }
      }
    },
    {
      "name": "[variables('timco-vm1Nic1Name')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-09-01",
      "dependsOn": [
        "[concat('Microsoft.Network/virtualNetworks/', variables('timco-vNet1Name'))]",
        "[concat('Microsoft.Network/publicIPAddresses/', variables('timco-vm1Pip1Name'))]"
      ],
      "tags": {
        "displayName": "[variables('timco-vm1Nic1Name')]"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Static",
              "privateIPAddress": "[parameters('timco-vm1IPAddress')]",
              "subnet": {
                "id": "[variables('timco-vm1SubnetRef')]"
              },
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('timco-vm1Pip1Name'))]"
              }
            }
          }
        ]
      }
    },
    {
      "name": "[parameters('timco-vm1Name')]",
      "type": "Microsoft.Compute/virtualMachines",
      "apiVersion": "2016-04-30-preview",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[concat('Microsoft.Storage/storageAccounts/', variables('timco-vm1StorAccName'))]",
        "[concat('Microsoft.Network/networkInterfaces/', variables('timco-vm1Nic1Name'))]"
      ],
      "tags": {
        "displayName": "[parameters('timco-vm1Name')]"
      },
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('timco-vm1VmSize')]"
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": true,
            "storageUri": "[concat('http://', variables('timco-vm1StorAccName'), '.blob.core.windows.net/')]"
          }
        },
        "osProfile": {
          "computerName": "[parameters('timco-vm1Name')]",
          "adminUsername": "[parameters('timco-vm1AdminUsername')]",
          "adminPassword": "[parameters('timco-vm1AdminPassword')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[variables('timco-vm1ImagePublisher')]",
            "offer": "[variables('timco-vm1ImageOffer')]",
            "sku": "[parameters('timco-vm1WindowsOSVersion')]",
            "version": "latest"
          },
          "osDisk": {
            "name": "timco-vm1OSDisk",
            "managedDisk": {
              "storageAccountType": "Standard_LRS"
            },
            "caching": "ReadWrite",
            "createOption": "FromImage"
          },
          "dataDisks": [
            {
              "name": "timco-vm1Datadisk1",
              "diskSizeGB": "[parameters('timco-vm1DataDisk1SizeGB')]",
              "lun": 1,
              "managedDisk": {
                "storageAccountType": "Standard_LRS"
              },
              "createOption": "Empty"
            }
          ]
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('timco-vm1Nic1Name'))]"
            }
          ]
        }
      },
      "resources": [
        {
          "name": "timco-dsc1",
          "type": "extensions",
          "location": "[resourceGroup().location]",
          "apiVersion": "2016-03-30",
          "dependsOn": [
            "[concat('Microsoft.Compute/virtualMachines/', parameters('timco-vm1Name'))]"
          ],
          "tags": {
            "displayName": "timco-dsc1"
          },
          "properties": {
            "publisher": "Microsoft.Powershell",
            "type": "DSC",
            "typeHandlerVersion": "2.17",
            "autoUpgradeMinorVersion": true,
            "settings": {
              "modulesUrl": "[variables('timco-modulesUrl')]",
              "sasToken": "",
              "configurationFunction": "[variables('timco-dsc1ConfigurationFunction')]",
              "properties": {
                "NodeName": "[parameters('timco-vm1Name')]",
                "DomainName": "[parameters('timco-domainName')]",
                "AdminCreds": {
                  "UserName": "[parameters('timco-vm1AdminUserName')]",
                  "Password": "PrivateSettingsRef:AdminPassword"
                },
                "SafeModeCreds": {
                  "UserName": "Administrator",
                  "Password": "PrivateSettingsRef:SafeModePassword"
                }
              }
            },
            "protectedSettings": {
              "Items": {
                "AdminPassword": "[parameters('timco-vm1AdminPassword')]",
                "SafeModePassword": "[parameters('timco-vm1SafeModePassword')]"
              },
              "DataBlobUri": "[concat(variables('timco-assetLocation'),variables('timco-dsc1ConfigurationData'))]"
            }
          }
        }
      ]
    }
  ],

  "outputs": {
  }
}