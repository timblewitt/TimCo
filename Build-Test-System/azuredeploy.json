{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",

  "contentVersion": "1.0.0.0",

  "parameters": {
    "timco-domainControllerCount": {
      "type": "int",
      "defaultValue": 2,
      "minValue": 0,
      "maxValue": 2,
      "metadata": {
        "description": "Number of domain controllers to deploy."
      }
    },
    "timco-webServerCount": {
      "type": "int",
      "defaultValue": 0,
      "minValue": 0,
      "maxValue": 3,
      "metadata": {
        "description": "Number of domain-joined web servers to deploy."
      }
    },
    "timco-webDomainJoin": {
      "type": "string",
      "defaultValue": "Yes",
      "allowedValues": [
        "Yes",
        "No"
      ],
      "metadata": {
        "description": "Join web servers to domain?."
      }
    },
    "timco-appServerCount": {
      "type": "int",
      "defaultValue": 0,
      "minValue": 0,
      "maxValue": 3,
      "metadata": {
        "description": "Number of domain-joined application servers to deploy."
      }
    },
    "timco-appDomainJoin": {
      "type": "string",
      "defaultValue": "Yes",
      "allowedValues": [
        "Yes",
        "No"
      ],
      "metadata": {
        "description": "Join application servers to domain?."
      }
    },
    "timco-domainName": {
      "type": "string",
      "defaultValue": "timco.local",
      "metadata": {
        "description": "FQDN of the AD Domain to be created."
      }
    },
    "timco-adminUserName": {
      "type": "string",
      "defaultValue": "timco-admin",
      "minLength": 1,
      "metadata": {
        "description": "Admin username."
      }
    },
    "timco-adminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Admin password."
      }
    },
    "timco-safeModePassword": {
      "type": "securestring",
      "metadata": {
        "description": "Safe mode password for the VM as a domain controller"
      }
    },
    "timco-adcNamePrefix": {
      "type": "string",
      "minLength": 1,
      "maxLength": 12,
      "defaultValue": "timco-adc",
      "metadata": {
        "description": "Prefix for naming domain controllers."
      }
    },
    "timco-webNamePrefix": {
      "type": "string",
      "minLength": 1,
      "maxLength": 12,
      "defaultValue": "timco-web",
      "metadata": {
        "description": "Prefix for naming web servers."
      }
    },
    "timco-appNamePrefix": {
      "type": "string",
      "minLength": 1,
      "maxLength": 12,
      "defaultValue": "timco-app",
      "metadata": {
        "description": "Prefix for naming application servers."
      }
    }
  },

  "variables": {
    "timco-vmStorAccName": "[concat('timcosa', uniqueString(resourceGroup().id))]",
    "timco-vmStorAccType": "Standard_LRS",
    "timco-adcAvailabilitySet": "timco-adc-avset1",
    "timco-webAvailabilitySet": "timco-web-avset1",
    "timco-appAvailabilitySet": "timco-app-avset1",
    "timco-vNet1Name": "timco-vnet1",
    "timco-vNet1Prefix": "10.0.0.0/16",
    "timco-vNet1Subnet1Name": "FrontEnd-10.0.1.0-Subnet",
    "timco-vNet1Subnet1Prefix": "10.0.1.0/24",
    "timco-vNet1Subnet1NSGName": "timco-nsg-frontend",
    "timco-vNet1Subnet2Name": "BackEnd-10.0.2.0-Subnet",
    "timco-vNet1Subnet2Prefix": "10.0.2.0/24",
    "timco-vNet1Subnet2NSGName": "timco-nsg-backend",
    "timco-webLBName": "timco-web-lb",
    "timco-webLBNatRulesName": "timco-web-lb-nat-rules",
    "timco-webLBID": "[resourceId('Microsoft.Network/loadBalancers',variables('timco-webLBName'))]",
    "timco-webLBFEConfigName": "timco-WebLBFrontEnd",
    "timco-webLBFEConfigID": "[concat(variables('timco-webLBID'),'/frontendIPConfigurations/',variables('timco-webLBFEConfigName'))]",
    "timco-webLBBEPoolName": "timco-WebLBBackEndPool",
    "timco-webLBBEPoolID": "[concat(variables('timco-webLBID'),'/backendAddressPools/', variables('timco-webLBBEPoolName'))]",
    "timco-webLBProbeID": "[concat(variables('timco-webLBID'),'/probes/tcpProbe')]",
    "timco-webPIPName": "[concat(variables('timco-webLBName'), '-pip1')]",
    "timco-webPIPID": "[resourceId('Microsoft.Network/publicIPAddresses',variables('timco-webPIPName'))]",
    "timco-webDNSPrefix": "[parameters('timco-webNamePrefix')]",
    "timco-adcIPAddressPrefix": "10.0.2.",
    "timco-adcStartIndex": 1,
    "timco-bdcStartIndex": "[add(variables('timco-adcStartIndex'),1)]",
    "timco-webStartIndex": 1,
    "timco-appStartIndex": 1,
    "timco-adcDNSServerAddress": "[concat(variables('timco-adcIPAddressPrefix'), padLeft(variables('timco-adcStartIndex'),2,'1'))]",
    "timco-bdcDNSServerAddress": "[concat(variables('timco-adcIPAddressPrefix'), padLeft(variables('timco-bdcStartIndex'),2,'1'))]",
    "timco-dcCopyCount": "[if(equals(parameters('timco-domainControllerCount'), 0), 1, parameters('timco-domainControllerCount'))]",
    "timco-webCopyCount": "[if(equals(parameters('timco-webServerCount'), 0), 1, parameters('timco-webServerCount'))]",
    "timco-appCopyCount": "[if(equals(parameters('timco-appServerCount'), 0), 1, parameters('timco-appServerCount'))]",
    "timco-vmSize": "Standard_D1_V2",
    "timco-vmWindowsOSVersion": "2016-Datacenter",
    "timco-vmImagePublisher": "MicrosoftWindowsServer",
    "timco-vmImageOffer": "WindowsServer",
    "timco-adcDataDisk1SizeGB": "50",
    "timco-webDataDisk1SizeGB": "50",
    "timco-appDataDisk1SizeGB": "50",
    "timco-adcSubNet": "BackEnd-10.0.2.0-Subnet",
    "timco-webSubNet": "FrontEnd-10.0.1.0-Subnet",
    "timco-appSubNet": "BackEnd-10.0.2.0-Subnet",
    "timco-vmVNetID": "[resourceId('Microsoft.Network/virtualNetworks', variables('timco-vNet1Name'))]",
    "timco-adcSubnetRef": "[concat(variables('timco-vmVnetID'), '/subnets/', variables('timco-adcSubNet'))]",
    "timco-webSubnetRef": "[concat(variables('timco-vmVnetID'), '/subnets/', variables('timco-webSubNet'))]",
    "timco-appSubnetRef": "[concat(variables('timco-vmVnetID'), '/subnets/', variables('timco-appSubNet'))]",
    "timco-artifactsLocation": "https://github.com/timblewitt/TimCo/raw/master",
    "timco-dscConfigurationDataUrl": "https://raw.githubusercontent.com/timblewitt/TimCo/master/Build-Test-System/timco-dsc1.psd1",
    "timco-dscArchiveFolder": "Build-Test-System",
    "timco-dscArchiveFileName": "timco-dsc1.zip",
    "timco-dscConfigScript": "timco-dsc1.ps1",
    "timco-dscConfigFunctionFirstDC": "FirstDC",
    "timco-dscConfigFunctionNextDC": "NextDC",
    "timco-dscConfigFunctionWebServer": "WebServer",
    "timco-dscConfigFunctionAppServer": "AppServer",
    "timco-dscForceUpdateVersion": "1.0",
    "timco-domainDistinguishedName": "[concat('DC=',replace(parameters('timco-domainName'),'.',',DC='))]",
    "timco-ouPathWeb": "[concat('OU=Web,OU=Servers,OU=Computers,OU=Managed,', variables('timco-domainDistinguishedName'))]",
    "timco-ouPathApp": "[concat('OU=Application,OU=Servers,OU=Computers,OU=Managed,', variables('timco-domainDistinguishedName'))]",
    "timco-domainAdminName": "[concat(parameters('timco-adminUserName'),'@', parameters('timco-domainName'))]",
    "timco-domainJoinOptions": 3
  },

  "resources": [
    {
      "name": "[variables('timco-vmStorAccName')]",
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2017-10-01",
      "location": "[resourceGroup().location]",
      "dependsOn": [],
      "tags": {
        "displayName": "Storage account"
      },
      "sku": {
        "name": "[variables('timco-vmStorAccType')]"
      },
      "kind": "StorageV2",
      "properties": {
      }
    },
    {
      "name": "[variables('timco-adcAvailabilitySet')]",
      "type": "Microsoft.Compute/availabilitySets",
      "apiVersion": "2017-12-01",
      "location": "[resourceGroup().location]",
      "dependsOn": [],
      "tags": {
        "displayName": "Availability set - domain controllers"
      },
      "properties": {
        "platformUpdateDomainCount": "5",
        "platformFaultDomainCount": "2"
      },
      "sku": {
        "name": "Aligned"
      }
    },
    {
      "name": "[variables('timco-webAvailabilitySet')]",
      "type": "Microsoft.Compute/availabilitySets",
      "condition": "[greater(parameters('timco-webServerCount'),0)]",
      "apiVersion": "2017-12-01",
      "location": "[resourceGroup().location]",
      "dependsOn": [],
      "tags": {
        "displayName": "Availability set - web servers"
      },
      "properties": {
        "platformUpdateDomainCount": "5",
        "platformFaultDomainCount": "2"
      },
      "sku": {
        "name": "Aligned"
      }
    },
    {
      "name": "[variables('timco-appAvailabilitySet')]",
      "type": "Microsoft.Compute/availabilitySets",
      "condition": "[greater(parameters('timco-appServerCount'),0)]",
      "apiVersion": "2017-12-01",
      "location": "[resourceGroup().location]",
      "dependsOn": [],
      "tags": {
        "displayName": "Availability set - application servers"
      },
      "properties": {
        "platformUpdateDomainCount": "5",
        "platformFaultDomainCount": "2"
      },
      "sku": {
        "name": "Aligned"
      }
    },
    {
      "name": "[variables('timco-vNet1Subnet1NSGName')]",
      "type": "Microsoft.Network/networkSecurityGroups",
      "apiVersion": "2017-10-01",
      "location": "[resourceGroup().location]",
      "dependsOn": [],
      "tags": {
        "displayName": "NSG - Front End"
      },
      "properties": {
        "securityRules": [
          {
            "name": "NSG-Rule-Allow-RDP",
            "properties": {
              "description": "Allow RDP",
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "3389",
              "sourceAddressPrefix": "Internet",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "priority": 100,
              "direction": "Inbound"
            }
          },
          {
            "name": "NSG-Rule-Allow-HTTP",
            "properties": {
              "description": "Allow HTTP",
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "80",
              "sourceAddressPrefix": "Internet",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "priority": 101,
              "direction": "Inbound"
            }
          }
        ]
      }
    },
    {
      "name": "[variables('timco-vNet1Subnet2NSGName')]",
      "type": "Microsoft.Network/networkSecurityGroups",
      "apiVersion": "2017-10-01",
      "location": "[resourceGroup().location]",
      "dependsOn": [],
      "tags": {
        "displayName": "NSG - Back End"
      },
      "properties": {
        "securityRules": [
          {
            "name": "NSG-Rule-Allow-RDP",
            "properties": {
              "description": "Allow RDP",
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "3389",
              "sourceAddressPrefix": "Internet",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "priority": 100,
              "direction": "Inbound"
            }
          }
        ]
      }
    },
    {
      "name": "[variables('timco-vNet1Name')]",
      "type": "Microsoft.Network/virtualNetworks",
      "apiVersion": "2017-10-01",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[concat('Microsoft.Network/networkSecurityGroups/', variables('timco-vNet1Subnet1NSGName'))]",
        "[concat('Microsoft.Network/networkSecurityGroups/', variables('timco-vNet1Subnet2NSGName'))]"
      ],
      "tags": {
        "displayName": "VNet"
      },
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[variables('timco-vNet1Prefix')]"
          ]
        },
        "dhcpOptions": {
          "dnsServers": [
            "[variables('timco-adcDNSServerAddress')]",
            "[variables('timco-bdcDNSServerAddress')]",
            "168.63.129.16"
          ]
        },
        "subnets": [
          {
            "name": "[variables('timco-vNet1Subnet1Name')]",
            "properties": {
              "addressPrefix": "[variables('timco-vNet1Subnet1Prefix')]",
              "networkSecurityGroup": {
                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('timco-vNet1Subnet1NSGName'))]"
              }
            }
          },
          {
            "name": "[variables('timco-vNet1Subnet2Name')]",
            "properties": {
              "addressPrefix": "[variables('timco-vNet1Subnet2Prefix')]",
              "networkSecurityGroup": {
                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('timco-vNet1Subnet2NSGName'))]"
              }
            }
          }
        ]
      }
    },
    {
      "name": "[concat(parameters('timco-adcNamePrefix'), padLeft(copyIndex(variables('timco-adcStartIndex')),2,'0'), '-pip1')]",
      "type": "Microsoft.Network/publicIPAddresses",
      "apiVersion": "2017-10-01",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "adcPipLoop",
        "count": "[variables('timco-dcCopyCount')]"
      },
      "dependsOn": [],
      "tags": {
        "displayName": "PIPs - domain controllers"
      },
      "properties": {
        "publicIPAllocationMethod": "Dynamic",
        "dnsSettings": {
          "domainNameLabel": "[concat(parameters('timco-adcNamePrefix'), padLeft(copyIndex(variables('timco-adcStartIndex')),2,'0'))]"
        }
      }
    },
    {
      "name": "[concat(parameters('timco-webNamePrefix'), padLeft(copyIndex(variables('timco-webStartIndex')),2,'0'), '-pip1')]",
      "type": "Microsoft.Network/publicIPAddresses",
      "condition": "[greater(parameters('timco-webServerCount'),0)]",
      "apiVersion": "2017-10-01",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "webPipLoop",
        "count": "[variables('timco-webCopyCount')]"
      },
      "dependsOn": [],
      "tags": {
        "displayName": "PIPs - web servers"
      },
      "properties": {
        "publicIPAllocationMethod": "Dynamic",
        "dnsSettings": {
          "domainNameLabel": "[concat(parameters('timco-webNamePrefix'), padLeft(copyIndex(variables('timco-webStartIndex')),2,'0'))]"
        }
      }
    },
    {
      "name": "[concat(parameters('timco-appNamePrefix'), padLeft(copyIndex(variables('timco-appStartIndex')),2,'0'), '-pip1')]",
      "type": "Microsoft.Network/publicIPAddresses",
      "condition": "[greater(parameters('timco-appServerCount'),0)]",
      "apiVersion": "2017-10-01",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "appPipLoop",
        "count": "[variables('timco-appCopyCount')]"
      },
      "dependsOn": [],
      "tags": {
        "displayName": "PIPs - application servers"
      },
      "properties": {
        "publicIPAllocationMethod": "Dynamic",
        "dnsSettings": {
          "domainNameLabel": "[concat(parameters('timco-appNamePrefix'), padLeft(copyIndex(variables('timco-appStartIndex')),2,'0'))]"
        }
      }
    },
    {
      "name": "[concat(variables('timco-webLBName'), '-pip1')]",
      "type": "Microsoft.Network/publicIPAddresses",
      "condition": "[greater(parameters('timco-webServerCount'),0)]",
      "apiVersion": "2017-10-01",
      "location": "[resourceGroup().location]",
      "dependsOn": [],
      "tags": {
        "displayName": "PIP - web load balancer"
      },
      "properties": {
        "publicIPAllocationMethod": "Dynamic",
        "dnsSettings": {
          "domainNameLabel": "[variables('timco-webDNSPrefix')]"
        }
      }
    },
    {
      "name": "[variables('timco-webLBName')]",
      "type": "Microsoft.Network/loadBalancers",
      "condition": "[greater(parameters('timco-webServerCount'),0)]",
      "apiVersion": "2017-10-01",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[concat('Microsoft.Network/publicIPAddresses/', variables('timco-webPIPName'))]"
      ],
      "tags": {
        "displayName": "Web load balancer"
      },
      "properties": {
        "frontendIPConfigurations": [
          {
            "name": "[variables('timco-webLBFEConfigName')]",
            "properties": {
              "publicIPAddress": {
                "id": "[variables('timco-webPIPID')]"
              }
            }
          }
        ],
        "backendAddressPools": [
          {
            "name": "[variables('timco-webLBBEPoolName')]"
          }
        ],
        "loadBalancingRules": [
          {
            "name": "LBRule",
            "properties": {
              "frontendIPConfiguration": {
                "id": "[variables('timco-webLBFEConfigID')]"
              },
              "backendAddressPool": {
                "id": "[variables('timco-webLBBEPoolID')]"
              },
              "protocol": "tcp",
              "frontendPort": 80,
              "backendPort": 80,
              "enableFloatingIP": false,
              "idleTimeoutInMinutes": 5,
              "probe": {
                "id": "[variables('timco-webLBProbeID')]"
              }
            }
          }
        ],
        "probes": [
          {
            "name": "tcpProbe",
            "properties": {
              "protocol": "tcp",
              "port": 80,
              "intervalInSeconds": 5,
              "numberOfProbes": 2
            }
          }
        ]
      }
    },
    {
      "name": "[concat(variables('timco-webLBName'), '/', 'RDP-VM', copyIndex(variables('timco-webStartIndex')))]",
      "type": "Microsoft.Network/loadBalancers/inboundNatRules",
      "condition": "[greater(parameters('timco-webServerCount'),0)]",
      "apiVersion": "2017-10-01",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[concat('Microsoft.Network/loadBalancers/', variables('timco-webLBName'))]"
      ],
      "copy": {
        "name": "natRulesLoop",
        "count": "[if(equals(parameters('timco-webServerCount'),0),1,parameters('timco-webServerCount'))]"
      },
      "properties": {
        "frontendIPConfiguration": {
          "id": "[variables('timco-webLBFEConfigID')]"
        },
        "protocol": "tcp",
        "frontendPort": "[concat('5000', copyIndex(variables('timco-webStartIndex')))]",
        "backendPort": 3389,
        "enableFloatingIP": false
      }
    },
    {
      "name": "[concat(parameters('timco-adcNamePrefix'), padLeft(copyIndex(variables('timco-adcStartIndex')),2,'0'),'-nic1')]",
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "2017-10-01",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "adcNicLoop",
        "count": "[parameters('timco-domainControllerCount')]"
      },
      "dependsOn": [
        "[concat('Microsoft.Network/virtualNetworks/', variables('timco-vNet1Name'))]",
        "[concat('Microsoft.Network/publicIPAddresses/', parameters('timco-adcNamePrefix'), padLeft(copyIndex(variables('timco-adcStartIndex')),2,'0'), '-pip1')]"
      ],
      "tags": {
        "displayName": "NICs - domain controllers"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Static",
              "privateIPAddress": "[concat(variables('timco-adcIPAddressPrefix'), padLeft(copyIndex(variables('timco-adcStartIndex')),2,'1'))]",
              "subnet": {
                "id": "[variables('timco-adcSubnetRef')]"
              },
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses', concat(parameters('timco-adcNamePrefix'), padLeft(copyIndex(variables('timco-adcStartIndex')),2,'0'), '-pip1'))]"
              }
            }
          }
        ]
      }
    },
    {
      "name": "[concat(parameters('timco-webNamePrefix'), padLeft(copyIndex(variables('timco-webStartIndex')),2,'0'),'-nic1')]",
      "type": "Microsoft.Network/networkInterfaces",
      "condition": "[greater(parameters('timco-webServerCount'),0)]",
      "apiVersion": "2017-10-01",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "webNicLoop",
        "count": "[variables('timco-webCopyCount')]"
      },
      "dependsOn": [
        "[concat('Microsoft.Network/virtualNetworks/', variables('timco-vNet1Name'))]",
        "[concat('Microsoft.Network/publicIPAddresses/', parameters('timco-webNamePrefix'), padLeft(copyIndex(variables('timco-webStartIndex')),2,'0'), '-pip1')]",
        "[concat('Microsoft.Network/loadBalancers/', variables('timco-webLBName'), '/inboundNatRules/', 'RDP-VM', copyIndex(variables('timco-webStartIndex')))]"
      ],
      "tags": {
        "displayName": "NICS - web servers"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "loadBalancerBackendAddressPools": [
                {
                  "id": "[variables('timco-webLBBEPoolID')]",
                  "properties": {
                  }
                }
              ],
              "loadBalancerInboundNatRules": [
                {
                  "id": "[concat(variables('timco-webLBID'),'/inboundNatRules/RDP-VM', copyindex(1))]"
                }
              ],
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[variables('timco-webSubnetRef')]"
              },
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses', concat(parameters('timco-webNamePrefix'), padLeft(copyIndex(variables('timco-webStartIndex')),2,'0'), '-pip1'))]"
              }
            }
          }
        ]
      }
    },
    {
      "name": "[concat(parameters('timco-appNamePrefix'), padLeft(copyIndex(variables('timco-appStartIndex')),2,'0'),'-nic1')]",
      "type": "Microsoft.Network/networkInterfaces",
      "condition": "[greater(parameters('timco-appServerCount'),0)]",
      "apiVersion": "2017-10-01",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "appNicLoop",
        "count": "[variables('timco-appCopyCount')]"
      },
      "dependsOn": [
        "[concat('Microsoft.Network/virtualNetworks/', variables('timco-vNet1Name'))]",
        "[concat('Microsoft.Network/publicIPAddresses/', parameters('timco-appNamePrefix'), padLeft(copyIndex(variables('timco-appStartIndex')),2,'0'), '-pip1')]"
      ],
      "tags": {
        "displayName": "NICs - application servers"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[variables('timco-appSubnetRef')]"
              },
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses', concat(parameters('timco-appNamePrefix'), padLeft(copyIndex(variables('timco-appStartIndex')),2,'0'), '-pip1'))]"
              }
            }
          }
        ]
      }
    },
    {
      "name": "[concat(parameters('timco-adcNamePrefix'), padLeft(variables('timco-adcStartIndex'),2,'0'))]",
      "type": "Microsoft.Compute/virtualMachines",
      "condition": "[greater(parameters('timco-domainControllerCount'),0)]",
      "apiVersion": "2017-12-01",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[concat('Microsoft.Storage/storageAccounts/', variables('timco-vmStorAccName'))]",
        "[concat('Microsoft.Compute/availabilitySets/', variables('timco-adcAvailabilitySet'))]",
        "[concat('Microsoft.Network/networkInterfaces/', parameters('timco-adcNamePrefix'), padLeft(variables('timco-adcStartIndex'),2,'0'),'-nic1')]"
      ],
      "tags": {
        "displayName": "First domain controller"
      },
      "properties": {
        "hardwareProfile": {
          "vmSize": "[variables('timco-vmSize')]"
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": true,
            "storageUri": "[concat('http://', variables('timco-vmStorAccName'), '.blob.core.windows.net/')]"
          }
        },
