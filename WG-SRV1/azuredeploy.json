{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
  "parameters": {
    "timcostoraccType": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "allowedValues": [
        "Standard_LRS",
        "Standard_ZRS",
        "Standard_GRS",
        "Standard_RAGRS",
        "Premium_LRS"
      ],
      "metadata": {
        "description": "Storage account type to store new VM."
      }
    },
    "timco-vm1Name": {
      "type": "string",
      "minLength": 1,
      "defaultValue": "timco-wg-srv1",
      "metadata": {
        "description": "Name of VM."
      }
    },
    "timco-pip1DnsName": {
      "type": "string",
      "defaultValue": "tcsrv1",
      "minLength": 1,
      "metadata": {
        "description": "Unique DNS Name for the Public IP used to access the VM.  Do not include domain name suffix.  It can be the same as the internal VM name."
      }
    },
    "timco-vm1AdminUserName": {
      "type": "string",
      "defaultValue": "timco-admin",
      "minLength": 1,
      "metadata": {
        "description": "Admin username for the VM."
      }
    },
    "timco-vm1AdminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Admin password for the VM."
      }
    },
    "timco-vm1WindowsOSVersion": {
      "type": "string",
      "defaultValue": "2012-R2-Datacenter",
      "allowedValues": [
        "2008-R2-SP1",
        "2012-Datacenter",
        "2012-R2-Datacenter",
        "Windows-Server-Technical-Preview"
      ],
      "metadata": {
        "description": "Windows version for the VM."
      }
    },
    "timco-vm1VmSize": {
      "type": "string",
      "defaultValue": "Standard_D1",
      "allowedValues": [
        "Standard_A0",
        "Standard_A1",
        "Standard_D1"
      ],
      "metadata": {
        "description": "Size of VM."
      }
    },
    "timco-vm1DataDisk1SizeGB": {
      "type": "string",
      "defaultValue": "20",
      "metadata": {
        "description": "Size of data disk.  This is NOT the temporary D drive that is added for temporary use."
      }
    },
    "timco-vm1SubNet": {
      "type": "string",
      "defaultValue": "Subnet1-FrontEnd",
      "allowedValues": [
        "Subnet1-FrontEnd",
        "Subnet2-BackEnd"
      ],
      "metadata": {
        "description": "Subnet for VM. Front-end or back-end?"
      }
    },
    "timco-modulesUrl": {
      "type": "string",
      "defaultValue": "https://github.com/timblewitt/TimCo/raw/master/WG-SRV1/timco-dsc1.zip",
      "metadata": {
        "description": "Location of DSC configuration files."
      }
    },
    "timco-dsc1ConfigurationFunction": {
      "type": "string",
      "defaultValue": "timco-dsc1.ps1\\Main",
      "metadata": {
        "description": "DSC configuration function."
      }
    }
  },
  
  "variables": {
    "timcostoraccName": "[concat('timcosa', uniqueString(resourceGroup().id))]",
    "timco-vnet1Prefix": "10.0.0.0/16",
    "timco-vnet1Subnet1Name": "Subnet1-FrontEnd",
    "timco-vnet1Subnet1Prefix": "10.0.1.0/24",
    "timco-vnet1Subnet2Name": "Subnet2-BackEnd",
    "timco-vnet1Subnet2Prefix": "10.0.2.0/24",
    "timco-vm1ImagePublisher": "MicrosoftWindowsServer",
    "timco-vm1ImageOffer": "WindowsServer",
    "timco-vm1OSDiskName": "timco-vm1OSDisk",
    "timco-vm1dataDisk1Name": "timco-vm1dataDisk1",
    "timco-vm1VnetID": "[resourceId('Microsoft.Network/virtualNetworks', 'timco-vnet1')]",
    "timco-vm1SubnetRef": "[concat(variables('timco-vm1VnetID'), '/subnets/', parameters('timco-vm1SubNet'))]",
    "timco-vm1StorageAccountContainerName": "vhds",
    "timco-vm1Nic1Name": "[concat(parameters('timco-vm1Name'), '-nic1')]",
    "timco-pip1Name": "timco-pip1"
  },
    "resources": [
        {
            "name": "[variables('timcostoraccName')]",
            "type": "Microsoft.Storage/storageAccounts",
            "location": "[resourceGroup().location]",
            "apiVersion": "2015-06-15",
            "dependsOn": [ ],
            "tags": {
                "displayName": "timcostoracc"
            },
            "properties": {
                "accountType": "[parameters('timcostoraccType')]"
            }
        },
        {
            "name": "timco-vnet1",
            "type": "Microsoft.Network/virtualNetworks",
            "location": "[resourceGroup().location]",
            "apiVersion": "2015-06-15",
            "dependsOn": [ ],
            "tags": {
                "displayName": "timco-vnet1"
            },
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[variables('timco-vnet1Prefix')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[variables('timco-vnet1Subnet1Name')]",
                        "properties": {
                            "addressPrefix": "[variables('timco-vnet1Subnet1Prefix')]"
                        }
                    },
                    {
                        "name": "[variables('timco-vnet1Subnet2Name')]",
                        "properties": {
                            "addressPrefix": "[variables('timco-vnet1Subnet2Prefix')]"
                        }
                    }
                ]
            }
        },
        {
            "name": "[variables('timco-vm1Nic1Name')]",
            "type": "Microsoft.Network/networkInterfaces",
            "location": "[resourceGroup().location]",
            "apiVersion": "2015-06-15",
            "dependsOn": [
                "[concat('Microsoft.Network/virtualNetworks/', 'timco-vnet1')]",
                "[concat('Microsoft.Network/publicIPAddresses/', variables('timco-pip1Name'))]"
            ],
            "tags": {
                "displayName": "timco-vm1Nic1"
            },
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[variables('timco-vm1SubnetRef')]"
                            },
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('timco-pip1Name'))]"
                            }
                        }
                    }
                ]
            }
        },
      {
        "name": "[parameters('timco-vm1Name')]",
        "type": "Microsoft.Compute/virtualMachines",
        "location": "[resourceGroup().location]",
        "apiVersion": "2015-06-15",
        "dependsOn": [
          "[concat('Microsoft.Storage/storageAccounts/', variables('timcostoraccName'))]",
          "[concat('Microsoft.Network/networkInterfaces/', variables('timco-vm1Nic1Name'))]"
        ],
        "tags": {
          "displayName": "timco-vm1"
        },
        "properties": {
          "hardwareProfile": {
            "vmSize": "[parameters('timco-vm1VmSize')]"
          },
          "osProfile": {
            "computerName": "[parameters('timco-vm1Name')]",
            "adminUsername": "[parameters('timco-vm1AdminUsername')]",
            "adminPassword": "[parameters('timco-vm1AdminPassword')]"
          },
          "storageProfile": {
            "imageReference": {
              "publisher": "[variables('timco-vm1ImagePublisher')]",
              "offer": "[variables('timco-vm1ImageOffer')]",
              "sku": "[parameters('timco-vm1WindowsOSVersion')]",
              "version": "latest"
            },
            "osDisk": {
              "name": "timco-vm1OSDisk",
              "vhd": {
                "uri": "[concat('http://', variables('timcostoraccName'), '.blob.core.windows.net/', variables('timco-vm1StorageAccountContainerName'), '/', variables('timco-vm1OSDiskName'), '.vhd')]"
              },
              "caching": "ReadWrite",
              "createOption": "FromImage"
          },
          "dataDisks": [
            {
              "name": "timco-vm1datadisk1",
              "diskSizeGB": "[parameters('timco-vm1DataDisk1SizeGB')]",
              "lun": 1,
              "vhd": {
                "Uri": "[concat('http://', variables('timcostoraccName'), '.blob.core.windows.net/', variables('timco-vm1StorageAccountContainerName'), '/', variables('timco-vm1dataDisk1Name'), '.vhd')]"
              },
              "createOption": "Empty"
            }
          ]
        },
            "networkProfile": {
              "networkInterfaces": [
                {
                  "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('timco-vm1Nic1Name'))]"
                }
              ]
            }
          },
            "resources": [
                {
                    "name": "timco-dsc1",
                    "type": "extensions",
                    "location": "[resourceGroup().location]",
                    "apiVersion": "2015-06-15",
                    "dependsOn": [
                        "[concat('Microsoft.Compute/virtualMachines/', parameters('timco-vm1Name'))]"
                    ],
                    "tags": {
                        "displayName": "timco-dsc1"
                    },
                    "properties": {
                        "publisher": "Microsoft.Powershell",
                        "type": "DSC",
                        "typeHandlerVersion": "2.9",
                        "autoUpgradeMinorVersion": true,
                        "settings": {
                            "modulesUrl": "[parameters('timco-modulesUrl')]",
                            "sasToken": "",
                            "configurationFunction": "[parameters('timco-dsc1ConfigurationFunction')]",
                            "properties": {
                                "nodeName": "[parameters('timco-vm1Name')]"
                            }
                        },
                        "protectedSettings": { }
                    }
                }
            ]
        },
        {
            "name": "[variables('timco-pip1Name')]",
            "type": "Microsoft.Network/publicIPAddresses",
            "location": "[resourceGroup().location]",
            "apiVersion": "2015-06-15",
            "dependsOn": [ ],
            "tags": {
                "displayName": "timco-pip1"
            },
            "properties": {
                "publicIPAllocationMethod": "Dynamic",
                "dnsSettings": {
                    "domainNameLabel": "[parameters('timco-pip1DnsName')]"
                }
            }
        }
    ],
    "outputs": {
    }
}
