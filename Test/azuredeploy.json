{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",

  "contentVersion": "1.0.0.0",

  "parameters": {
    "timco-domainControllerCount": {
      "type": "int",
      "defaultValue": 2,
      "minValue": 1,
      "maxValue": 3,
      "metadata": {
        "description": "Number of domain controllers to deploy."
      }
    },
    "timco-webServerCount": {
      "type": "int",
      "defaultValue": 0,
      "minValue": 0,
      "maxValue": 3,
      "metadata": {
        "description": "Number of domain-joined web servers to deploy."
      }
    },
    "timco-appServerCount": {
      "type": "int",
      "defaultValue": 0,
      "minValue": 0,
      "maxValue": 3,
      "metadata": {
        "description": "Number of domain-joined application servers to deploy."
      }
    },
    "timco-domainName": {
      "type": "string",
      "defaultValue": "timco.local",
      "metadata": {
        "description": "FQDN of the AD Domain to be created."
      }
    },
    "timco-adminUserName": {
      "type": "string",
      "defaultValue": "timco-admin",
      "minLength": 1,
      "metadata": {
        "description": "Admin username."
      }
    },
    "timco-adminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Admin password."
      }
    },
    "timco-safeModePassword": {
      "type": "securestring",
      "metadata": {
        "description": "Safe mode password for the VM as a domain controller"
      }
    },
    "timco-adcNamePrefix": {
      "type": "string",
      "minLength": 1,
      "defaultValue": "timco-adc",
      "metadata": {
        "description": "Prefix for naming domain controllers."
      }
    },
    "timco-webNamePrefix": {
      "type": "string",
      "minLength": 1,
      "defaultValue": "timco-web",
      "metadata": {
        "description": "Prefix for naming web servers."
      }
    },
    "timco-appNamePrefix": {
      "type": "string",
      "minLength": 1,
      "defaultValue": "timco-app",
      "metadata": {
        "description": "Prefix for naming application servers."
      }
    }
  },

  "variables": {
    "timco-vmStorAccName": "[concat('timcosa', uniqueString(resourceGroup().id))]",
    "timco-vmStorAccType": "Standard_LRS",
    "timco-modulesUrl": "https://github.com/timblewitt/TimCo/raw/master/Test/timco-dsc1.zip",
    "timco-assetLocation": "https://raw.githubusercontent.com/timblewitt/TimCo/master/Test/",
    "timco-dscConfigFunctionFirstDC": "timco-dsc1.ps1\\FirstDC",
    "timco-dscConfigFunctionNextDC": "timco-dsc1.ps1\\NextDC",
    "timco-dscConfigFunctionWebServer": "timco-dsc1.ps1\\WebServer",
    "timco-dscConfigFunctionAppServer": "timco-dsc1.ps1\\AppServer",
    "timco-dscConfigurationData1": "timco-dsc1.psd1",
    "timco-adcAvailabilitySet": "timco-adc-avset1",
    "timco-webAvailabilitySet": "timco-web-avset1",
    "timco-appAvailabilitySet": "timco-app-avset1",
    "timco-vNet1Name": "timco-vnet1",
    "timco-vNet1Prefix": "10.0.0.0/16",
    "timco-vNet1Subnet1Name": "FrontEnd-10.0.1.0-Subnet",
    "timco-vNet1Subnet1Prefix": "10.0.1.0/24",
    "timco-vNet1Subnet2Name": "BackEnd-10.0.2.0-Subnet",
    "timco-vNet1Subnet2Prefix": "10.0.2.0/24",
    "timco-adcIPAddressPrefix": "10.0.2.",
    "timco-adcStartIndex": 1,
    "timco-bdcStartIndex": "[add(variables('timco-adcStartIndex'),1)]",
    "timco-webStartIndex": 1,
    "timco-appStartIndex": 1,
    "timco-adcDNSServerAddress": "[concat(variables('timco-adcIPAddressPrefix'), padLeft(variables('timco-adcStartIndex'),2,'1'))]",
    "timco-bdcDNSServerAddress": "[concat(variables('timco-adcIPAddressPrefix'), padLeft(variables('timco-bdcStartIndex'),2,'1'))]",
    "timco-vmSize": "Standard_D1_V2",
    "timco-vmWindowsOSVersion": "2016-Datacenter",
    "timco-vmImagePublisher": "MicrosoftWindowsServer",
    "timco-vmImageOffer": "WindowsServer",
    "timco-adcDataDisk1SizeGB": "50",
    "timco-webDataDisk1SizeGB": "50",
    "timco-appDataDisk1SizeGB": "50",
    "timco-adcSubNet": "BackEnd-10.0.2.0-Subnet",
    "timco-webSubNet": "FrontEnd-10.0.1.0-Subnet",
    "timco-appSubNet": "BackEnd-10.0.2.0-Subnet",
    "timco-vmVNetID": "[resourceId('Microsoft.Network/virtualNetworks', variables('timco-vNet1Name'))]",
    "timco-adcSubnetRef": "[concat(variables('timco-vmVnetID'), '/subnets/', variables('timco-adcSubNet'))]",
    "timco-webSubnetRef": "[concat(variables('timco-vmVnetID'), '/subnets/', variables('timco-webSubNet'))]",
    "timco-appSubnetRef": "[concat(variables('timco-vmVnetID'), '/subnets/', variables('timco-appSubNet'))]",
    "timco-ouPathWeb": "OU=Servers;OU=Computers;OU=Managed;DC=timco;DC=local",
    "timco-ouPathApp": "OU=Servers;OU=Computers;OU=Managed;DC=timco;DC=local",
    "timco-vmStorageAccountContainerName": "vhds",
    "timco-domainAdminName": "[concat(parameters('timco-domainName'), '\\', parameters('timco-adminUserName'))]",
    "timco-domainJoinOptions": 3
  },

  "resources": [
    {
      "name": "[variables('timco-adcAvailabilitySet')]",
      "type": "Microsoft.Compute/availabilitySets",
      "apiVersion": "2017-12-01",
      "location": "[resourceGroup().location]",
      "tags": {
        "displayName": "Availability set - domain controllers"
      },
      "properties": {
        "platformUpdateDomainCount": "5",
        "platformFaultDomainCount": "2"
      },
      "sku": {
        "name": "Aligned"
      }
    },
    {
      "name": "[variables('timco-webAvailabilitySet')]",
      "type": "Microsoft.Compute/availabilitySets",
      "condition": "[greater(parameters('timco-webServerCount'),0)]",
      "apiVersion": "2017-12-01",
      "location": "[resourceGroup().location]",
      "tags": {
        "displayName": "Availability set - web servers"
      },
      "properties": {
        "platformUpdateDomainCount": "5",
        "platformFaultDomainCount": "2"
      },
      "sku": {
        "name": "Aligned"
      }
    },
    {
      "name": "[variables('timco-appAvailabilitySet')]",
      "type": "Microsoft.Compute/availabilitySets",
      "condition": "[greater(parameters('timco-appServerCount'),0)]",
      "apiVersion": "2017-12-01",
      "location": "[resourceGroup().location]",
      "tags": {
        "displayName": "Availability set - application servers"
      },
      "properties": {
        "platformUpdateDomainCount": "5",
        "platformFaultDomainCount": "2"
      },
      "sku": {
        "name": "Aligned"
      }
    },
    {
      "name": "[variables('timco-vmStorAccName')]",
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2017-10-01",
      "location": "[resourceGroup().location]",
      "dependsOn": [],
      "tags": {
        "displayName": "Storage account"
      },
      "sku": {
        "name": "[variables('timco-vmStorAccType')]"
      },
      "kind": "StorageV2",
      "properties": {
      }
    },
    {
      "name": "[variables('timco-vNet1Name')]",
      "type": "Microsoft.Network/virtualNetworks",
      "apiVersion": "2017-10-01",
      "location": "[resourceGroup().location]",
      "dependsOn": [],
      "tags": {
        "displayName": "vNet"
      },
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[variables('timco-vNet1Prefix')]"
          ]
        },
        "dhcpOptions": {
          "dnsServers": [
            "[variables('timco-adcDNSServerAddress')]",
            "[variables('timco-bdcDNSServerAddress')]",
            "168.63.129.16"
          ]
        },
        "subnets": [
          {
            "name": "[variables('timco-vNet1Subnet1Name')]",
            "properties": {
              "addressPrefix": "[variables('timco-vNet1Subnet1Prefix')]"
            }
          },
          {
            "name": "[variables('timco-vNet1Subnet2Name')]",
            "properties": {
              "addressPrefix": "[variables('timco-vNet1Subnet2Prefix')]"
            }
          }
        ]
      }
    },
    {
      "name": "[concat(parameters('timco-adcNamePrefix'), padLeft(copyIndex(variables('timco-adcStartIndex')),2,'0'), '-pip1')]",
      "type": "Microsoft.Network/publicIPAddresses",
      "apiVersion": "2017-10-01",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "pipLoop",
        "count": "[parameters('timco-domainControllerCount')]"
      },
      "dependsOn": [],
      "tags": {
        "displayName": "PIPs - domain controllers"
      },
      "properties": {
        "publicIPAllocationMethod": "Dynamic",
        "dnsSettings": {
          "domainNameLabel": "[concat(parameters('timco-adcNamePrefix'), padLeft(copyIndex(variables('timco-adcStartIndex')),2,'0'))]"
        }
      }
    },
    {
      "name": "[concat(parameters('timco-webNamePrefix'), padLeft(copyIndex(variables('timco-webStartIndex')),2,'0'), '-pip1')]",
      "type": "Microsoft.Network/publicIPAddresses",
      "apiVersion": "2017-10-01",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "pipLoop",
        "count": "[parameters('timco-domainControllerCount')]"
      },
      "dependsOn": [],
      "tags": {
        "displayName": "PIPs - web servers"
      },
      "properties": {
        "publicIPAllocationMethod": "Dynamic",
        "dnsSettings": {
          "domainNameLabel": "[concat(parameters('timco-webNamePrefix'), padLeft(copyIndex(variables('timco-webStartIndex')),2,'0'))]"
        }
      }
    },
    {
      "name": "[concat(parameters('timco-appNamePrefix'), padLeft(copyIndex(variables('timco-appStartIndex')),2,'0'), '-pip1')]",
      "type": "Microsoft.Network/publicIPAddresses",
      "apiVersion": "2017-10-01",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "pipLoop",
        "count": "[parameters('timco-domainControllerCount')]"
      },
      "dependsOn": [],
      "tags": {
        "displayName": "PIPs - application servers"
      },
      "properties": {
        "publicIPAllocationMethod": "Dynamic",
        "dnsSettings": {
          "domainNameLabel": "[concat(parameters('timco-appNamePrefix'), padLeft(copyIndex(variables('timco-appStartIndex')),2,'0'))]"
        }
      }
    },
    {
      "name": "[concat(parameters('timco-adcNamePrefix'), padLeft(copyIndex(variables('timco-adcStartIndex')),2,'0'),'-nic1')]",
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "2017-10-01",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "nicLoop",
        "count": "[parameters('timco-domainControllerCount')]"
      },
      "dependsOn": [
        "[concat('Microsoft.Network/virtualNetworks/', variables('timco-vNet1Name'))]",
        "[concat('Microsoft.Network/publicIPAddresses/', parameters('timco-adcNamePrefix'), padLeft(copyIndex(variables('timco-adcStartIndex')),2,'0'), '-pip1')]"
      ],
      "tags": {
        "displayName": "NICs - domain controllers"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Static",
              "privateIPAddress": "[concat(variables('timco-adcIPAddressPrefix'), padLeft(copyIndex(variables('timco-adcStartIndex')),2,'1'))]",
              "subnet": {
                "id": "[variables('timco-adcSubnetRef')]"
              },
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses', concat(parameters('timco-adcNamePrefix'), padLeft(copyIndex(variables('timco-adcStartIndex')),2,'0'), '-pip1'))]"
              }
            }
          }
        ]
      }
    },
    {
      "name": "[concat(parameters('timco-webNamePrefix'), padLeft(copyIndex(variables('timco-webStartIndex')),2,'0'),'-nic1')]",
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "2017-10-01",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "nicLoop",
        "count": "[parameters('timco-webServerCount')]"
      },
      "dependsOn": [
        "[concat('Microsoft.Network/virtualNetworks/', variables('timco-vNet1Name'))]",
        "[concat('Microsoft.Network/publicIPAddresses/', parameters('timco-webNamePrefix'), padLeft(copyIndex(variables('timco-webStartIndex')),2,'0'), '-pip1')]"
      ],
      "tags": {
        "displayName": "NICS - web servers"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[variables('timco-webSubnetRef')]"
              },
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses', concat(parameters('timco-webNamePrefix'), padLeft(copyIndex(variables('timco-webStartIndex')),2,'0'), '-pip1'))]"
              }
            }
          }
        ]
      }
    },
    {
      "name": "[concat(parameters('timco-appNamePrefix'), padLeft(copyIndex(variables('timco-appStartIndex')),2,'0'),'-nic1')]",
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "2017-10-01",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "nicLoop",
        "count": "[parameters('timco-appServerCount')]"
      },
      "dependsOn": [
        "[concat('Microsoft.Network/virtualNetworks/', variables('timco-vNet1Name'))]",
        "[concat('Microsoft.Network/publicIPAddresses/', parameters('timco-appNamePrefix'), padLeft(copyIndex(variables('timco-appStartIndex')),2,'0'), '-pip1')]"
      ],
      "tags": {
        "displayName": "NICs - application servers"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[variables('timco-appSubnetRef')]"
              },
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses', concat(parameters('timco-appNamePrefix'), padLeft(copyIndex(variables('timco-appStartIndex')),2,'0'), '-pip1'))]"
              }
            }
          }
        ]
      }
    },
    {
      "name": "[concat(parameters('timco-adcNamePrefix'), padLeft(variables('timco-adcStartIndex'),2,'0'))]",
      "type": "Microsoft.Compute/virtualMachines",
      "apiVersion": "2017-12-01",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[concat('Microsoft.Storage/storageAccounts/', variables('timco-vmStorAccName'))]",
        "[concat('Microsoft.Network/networkInterfaces/', parameters('timco-adcNamePrefix'), padLeft(variables('timco-adcStartIndex'),2,'0'),'-nic1')]"
      ],
      "tags": {
        "displayName": "First domain controller"
      },
      "properties": {
        "hardwareProfile": {
          "vmSize": "[variables('timco-vmSize')]"
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": true,
            "storageUri": "[concat('http://', variables('timco-vmStorAccName'), '.blob.core.windows.net/')]"
          }
        },
        "availabilitySet": {
          "id": "[resourceId('Microsoft.Compute/availabilitySets', variables('timco-adcAvailabilitySet'))]"
        },
        "osProfile": {
          "computerName": "[concat(parameters('timco-adcNamePrefix'), padLeft(variables('timco-adcStartIndex'),2,'0'))]",
          "adminUsername": "[parameters('timco-adminUsername')]",
          "adminPassword": "[parameters('timco-adminPassword')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[variables('timco-vmImagePublisher')]",
            "offer": "[variables('timco-vmImageOffer')]",
            "sku": "[variables('timco-vmWindowsOSVersion')]",
            "version": "latest"
          },
          "osDisk": {
            "name": "[concat(parameters('timco-adcNamePrefix'), padLeft(variables('timco-adcStartIndex'),2,'0'), '-OSDisk')]",
            "managedDisk": {
              "storageAccountType": "Standard_LRS"
            },
            "caching": "ReadWrite",
            "createOption": "FromImage"
          },
          "dataDisks": [
            {
              "name": "[concat(parameters('timco-adcNamePrefix'), padLeft(variables('timco-adcStartIndex'),2,'0'), '-DataDisk')]",
              "diskSizeGB": "[variables('timco-adcDataDisk1SizeGB')]",
              "lun": 1,
              "managedDisk": {
                "storageAccountType": "Standard_LRS"
              },
              "createOption": "Empty"
            }
          ]
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('timco-adcNamePrefix'), padLeft(variables('timco-adcStartIndex'),2,'0'), '-nic1'))]"
            }
          ]
        }
      },
      "resources": [
        {
          "name": "timco-dsc1",
          "type": "extensions",
          "apiVersion": "2017-12-01",
          "location": "[resourceGroup().location]",
          "dependsOn": [
            "[concat('Microsoft.Compute/virtualMachines/', parameters('timco-adcNamePrefix'), padLeft(variables('timco-adcStartIndex'),2,'0'))]"
          ],
          "tags": {
            "displayName": "timco-dsc1"
          },
          "properties": {
            "publisher": "Microsoft.Powershell",
            "type": "DSC",
            "typeHandlerVersion": "2.72",
            "autoUpgradeMinorVersion": true,
            "settings": {
              "modulesUrl": "[variables('timco-modulesUrl')]",
              "sasToken": "",
              "configurationFunction": "[variables('timco-dscConfigFunctionFirstDC')]",
              "properties": {
                "NodeName": "[concat(parameters('timco-adcNamePrefix'), padLeft(variables('timco-adcStartIndex'),2,'0'))]",
                "DNSServerAddress": "[variables('timco-adcDNSServerAddress')]",
                "DomainName": "[parameters('timco-domainName')]",
                "AdminCreds": {
                  "UserName": "[parameters('timco-adminUserName')]",
                  "Password": "PrivateSettingsRef:AdminPassword"
                },
                "SafeModeCreds": {
                  "UserName": "Administrator",
                  "Password": "PrivateSettingsRef:SafeModePassword"
                }
              }
            },
            "protectedSettings": {
              "Items": {
                "AdminPassword": "[parameters('timco-adminPassword')]",
                "SafeModePassword": "[parameters('timco-safeModePassword')]"
              },
              "DataBlobUri": "[concat(variables('timco-assetLocation'),variables('timco-dscConfigurationData1'))]"
            }
          }
        }
      ]
    },
    {
      "name": "[concat(parameters('timco-adcNamePrefix'), padLeft(copyIndex(variables('timco-bdcStartIndex')),2,'0'))]",
      "type": "Microsoft.Compute/virtualMachines",
      "apiVersion": "2017-12-01",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "virtualMachineLoop",
        "count": "[sub(parameters('timco-domainControllerCount'),1)]"
      },
      "dependsOn": [
        "[concat('Microsoft.Storage/storageAccounts/', variables('timco-vmStorAccName'))]",
        "[concat('Microsoft.Network/networkInterfaces/', parameters('timco-adcNamePrefix'), padLeft(copyIndex(variables('timco-bdcStartIndex')),2,'0'),'-nic1')]"
      ],
      "tags": {
        "displayName": "Additional domain controllers"
      },
      "properties": {
        "hardwareProfile": {
          "vmSize": "[variables('timco-vmSize')]"
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": true,
            "storageUri": "[concat('http://', variables('timco-vmStorAccName'), '.blob.core.windows.net/')]"
          }
        },
        "availabilitySet": {
          "id": "[resourceId('Microsoft.Compute/availabilitySets', variables('timco-adcAvailabilitySet'))]"
        },
        "osProfile": {
          "computerName": "[concat(parameters('timco-adcNamePrefix'), padLeft(copyIndex(variables('timco-bdcStartIndex')),2,'0'))]",
          "adminUsername": "[parameters('timco-adminUsername')]",
          "adminPassword": "[parameters('timco-adminPassword')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[variables('timco-vmImagePublisher')]",
            "offer": "[variables('timco-vmImageOffer')]",
            "sku": "[variables('timco-vmWindowsOSVersion')]",
            "version": "latest"
          },
          "osDisk": {
            "name": "[concat(parameters('timco-adcNamePrefix'), padLeft(copyIndex(variables('timco-bdcStartIndex')),2,'0'), '-OSDisk')]",
            "managedDisk": {
              "storageAccountType": "Standard_LRS"
            },
            "caching": "ReadWrite",
            "createOption": "FromImage"
          },
          "dataDisks": [
            {
              "name": "[concat(parameters('timco-adcNamePrefix'), padLeft(copyIndex(variables('timco-bdcStartIndex')),2,'0'), '-DataDisk')]",
              "diskSizeGB": "[variables('timco-adcDataDisk1SizeGB')]",
              "lun": 1,
              "managedDisk": {
                "storageAccountType": "Standard_LRS"
              },
              "createOption": "Empty"
            }
          ]
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('timco-adcNamePrefix'), padLeft(copyIndex(variables('timco-bdcStartIndex')),2,'0'), '-nic1'))]"
            }
          ]
        }
      },
      "resources": [
        {
          "name": "timco-dsc1",
          "type": "extensions",
          "apiVersion": "2017-12-01",
          "location": "[resourceGroup().location]",
          "dependsOn": [
            "[concat('Microsoft.Compute/virtualMachines/', parameters('timco-adcNamePrefix'), padLeft(copyIndex(variables('timco-bdcStartIndex')),2,'0'))]",
            "[concat('Microsoft.Compute/virtualMachines/', parameters('timco-adcNamePrefix'), padLeft(copyIndex(variables('timco-adcStartIndex')),2,'0'), '/extensions/timco-dsc1')]"
          ],
          "tags": {
            "displayName": "timco-dsc1"
          },
          "properties": {
            "publisher": "Microsoft.Powershell",
            "type": "DSC",
            "typeHandlerVersion": "2.72",
            "autoUpgradeMinorVersion": true,
            "settings": {
              "modulesUrl": "[variables('timco-modulesUrl')]",
              "sasToken": "",
              "configurationFunction": "[variables('timco-dscConfigFunctionNextDC')]",
              "properties": {
                "NodeName": "[concat(parameters('timco-adcNamePrefix'), padLeft(copyIndex(variables('timco-bdcStartIndex')),2,'0'))]",
                "DNSServerAddress": "[variables('timco-adcDNSServerAddress')]",
                "DomainName": "[parameters('timco-domainName')]",
                "AdminCreds": {
                  "UserName": "[parameters('timco-adminUserName')]",
                  "Password": "PrivateSettingsRef:AdminPassword"
                },
                "SafeModeCreds": {
                  "UserName": "Administrator",
                  "Password": "PrivateSettingsRef:SafeModePassword"
                }
              }
            },
            "protectedSettings": {
              "Items": {
                "AdminPassword": "[parameters('timco-adminPassword')]",
                "SafeModePassword": "[parameters('timco-safeModePassword')]"
              },
              "DataBlobUri": "[concat(variables('timco-assetLocation'),variables('timco-dscConfigurationData1'))]"
            }
          }
        }
      ]
    },
    {
      "name": "[concat(parameters('timco-webNamePrefix'), padLeft(copyIndex(variables('timco-webStartIndex')),2,'0'))]",
      "type": "Microsoft.Compute/virtualMachines",
      "condition": "[greater(parameters('timco-webServerCount'),0)]",
      "apiVersion": "2017-12-01",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "virtualMachineLoop",
        "count": "[parameters('timco-webServerCount')]"
      },
      "dependsOn": [
        "[concat('Microsoft.Storage/storageAccounts/', variables('timco-vmStorAccName'))]",
        "[concat('Microsoft.Network/networkInterfaces/', parameters('timco-webNamePrefix'), padLeft(copyIndex(variables('timco-webStartIndex')),2,'0'),'-nic1')]"
      ],
      "tags": {
        "displayName": "Web servers"
      },
      "properties": {
        "hardwareProfile": {
          "vmSize": "[variables('timco-vmSize')]"
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": true,
            "storageUri": "[concat('http://', variables('timco-vmStorAccName'), '.blob.core.windows.net/')]"
          }
        },
        "availabilitySet": {
